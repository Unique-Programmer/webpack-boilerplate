{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    // "module": "ESNext" for using standart "import()" word
    "module": "ESNext",
    "target": "es5",
    // "jsx": "react-jsx" for using without 
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    /* "allowSyntheticDefaultImports": true and "esModuleInterop": true for using
    without " as *" imports without default export */
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    // aliases config
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}